D_DAY     EQU  11
D_MONTH   EQU  12
D_YEAR    EQU  2018

D_BCD_MONTH_0 EQU D_MONTH%(10)
D_BCD_MONTH_1 EQU (D_MONTH/10)
D_BCD_MONTH   EQU ((D_BCD_MONTH_1<<4)+D_BCD_MONTH_0)
D_BCD_DAY_0   EQU D_DAY%(10)
D_BCD_DAY_1   EQU (D_DAY/10)
D_BCD_DAY     EQU ((D_BCD_DAY_1<<4)+D_BCD_DAY_0)
D_BCD_YEAR_0  EQU D_YEAR%(10)
D_BCD_YEAR_1  EQU (D_YEAR/10)%(10)
D_BCD_YEAR_2  EQU (D_YEAR/100)%(10)
D_BCD_YEAR_3  EQU (D_YEAR/1000)
D_BCD_YEAR    EQU (((D_BCD_YEAR_3)<<12)+((D_BCD_YEAR_2)<<8)+((D_BCD_YEAR_1)<<4)+D_BCD_YEAR_0)
; mmddyyyy
D_BCD         EQU (D_BCD_MONTH<<24)+(D_BCD_DAY<<16)+D_BCD_YEAR

D_DOSDATE EQU  D_DAY+(D_MONTH<<5)+((D_YEAR-1980)<<9)

MGX_VERSION equ $0620
MGX_RELEASE equ 3       ;   0=alpha 1=beta 2=gamma 3=release
